<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:LifeApp.Pages"
             x:Class="LifeApp.Pages.AddTask">
    <ContentPage.Content>
        <StackLayout Margin="20, 10">
            <Label x:Name="titleLabel"
                   Text="This is the AddTask page!"
                   Style="{DynamicResource TitleStyle}"/> 
            <Entry x:Name="editTaskEntry"
                   Text=""/>
            <DatePicker x:Name="taskDueDate"/>
            <Picker x:Name="taskType" Title="Type of Task:">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Fitness</x:String>
                        <x:String>Intellect</x:String>
                        <x:String>Social</x:String>
                        <x:String>Finance</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
