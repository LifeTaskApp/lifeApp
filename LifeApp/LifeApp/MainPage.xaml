<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LifeApp"
             x:Class="LifeApp.MainPage">
    <StackLayout>
        <Button Text="Task complete!"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Clicked="OnButtonClicked"
                Command="{Binding Click}"/>


        <ProgressBar x:Name="MainLevel" 
                Progress="0.0" 
                Scale="1.0"/>
        <Grid x:Name="progressBarsLayout">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label
            x:Name ="User"
            FontSize = "20"
            Grid.Row="0"
            Grid.Column="0"
            Text = "Name"/>
            <Label
            x:Name ="Level"
            FontSize = "20"
            Grid.Row="0"
            Grid.Column="1"
            Text = "1"/>
            <Label
            FontSize = "12"
            HorizontalOptions="Center"
            Text = "Fitness"
            Grid.Row="1"
            Grid.Column="0"/>
            <ProgressBar x:Name="FitnessBar" 
                Progress="0.1" 
                Scale="1.0"
                Grid.Row="2"
                Grid.Column="0"/>
            <Label
            FontSize = "12"
            HorizontalOptions="Center"
            Text = "Intellect"
            Grid.Row="1"
            Grid.Column="1"/>
            <ProgressBar x:Name="IntellectBar" 
                Progress="0.7" 
                Scale="1.0"
                Grid.Row="2"
                Grid.Column="1"/>
            <Label
            FontSize = "12"
            HorizontalOptions="Center"
            Text = "Social"
            Grid.Row="3"
            Grid.Column="0"/>
            <ProgressBar x:Name="SocialBar" 
                Progress="0.3" 
                Scale="1.0"
                Grid.Row="4"
                Grid.Column="0"/>
            <Label
            FontSize = "12"
            HorizontalOptions="Center"
            Text = "Financial"
            Grid.Row="3"
            Grid.Column="1"/>
            <ProgressBar x:Name="FinancialBar" 
                Progress="0.9" 
                Scale="1.0"
                Grid.Row="4"
                Grid.Column="1"/>
        </Grid>

    </StackLayout>



</ContentPage>