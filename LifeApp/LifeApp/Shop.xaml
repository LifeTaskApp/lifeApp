                        <ViewCell.View>
                            <StackLayout >
                                <Label Text= "{Binding Name}" FontSize="Small"/>
                                <Label Text="{Binding Cost}" FontSize="Micro"/>
                                <Label Text="{Binding Equipped}" FontSize="Micro"/>
                            </StackLayout>
                        </ViewCell.View>
